/* pages/talentDetails/talentComment.wxss */
.comment-view {
  width: 100%;
  background-color: white;
  padding-bottom: 20rpx;
}

.textarea-view {
    padding: 20rpx;
    background-color: white;
}


.upload-img-view {
    width: 100%;
    background-color: pink;
    padding: 0 1.25%;
    height: auto;
}
.uploadimg-boder {
    margin-left: 1.25%;
    margin-right: 1.25%; 
    margin-bottom: 20rpx;
    float: left;
}
.uploadimg {
    width: 100%;
    height: 100%;
    float: left;
}

.upload-btn {
    background-color: #f5f5f5;
    text-align: center;
    color: #999999;
    font-size: 13px;
    border: 1rpx #dddddd solid;
    float: left;
    margin-left: 1.25%;
    margin-right: 1.25%;
}
.icon {
    width: 35%;
    height: 35%;
    margin-top: 50rpx;
}

/* 评分 */
.scoring-view {
    background-color: white;
    text-align: center;
    padding: 20rpx;
    margin-top: 20rpx;
    border-top: 1px #f5f5f5 solid;
    border-bottom: 1px #f5f5f5 solid;
}
.scoring-item {
    width: 60%;
    margin: 0 20% 30rpx 20%;
}
.startIcon {
    width: 50rpx;
    height: 50rpx;
    margin-top: 3rpx; 
    float: right;  
    margin-left: 2px; 
}

/* 发表 */
.commit-btn {
    width: 60%;
    background-color: #F15A4A;
    border-radius: 20rpx;
    margin: auto;
    color: white;
    text-align: center;
    padding: 10rpx;
    margin-top: 40rpx;
}