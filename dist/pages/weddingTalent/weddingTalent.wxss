/* pages/weddingTalent/weddingTalent.wxss */

.weui-tab__panel {
  margin-top: 45px;  
  background-color: white;
  padding-top: 0;
}
.weui-tab__content {
  height: 100%;  
  border-top: 1px #DDDDDD solid; 
  margin-bottom: 80rpx;
}
.weui-navbar {
  border-bottom: 1px solid #DDDDDD;
  position: fixed;
  background-color: white;
  font-size: 32rpx;
}
.weui-navbar__item {
  border-right: 1px #DDDDDD solid;
  padding: 0; 
}
.weui-navbar__item.weui-bar__item_on {
  color: #F15A4A;
}
.weui-navbar__slider {
  background-color: #F15A4A;
  height: 1px;
  width: 4em;
  margin-left: 2.9em;
}
.weui-navbar__title {
  padding: 15rpx;
}
.weui-navbar__title.weui-bar__item_on {
  border-bottom: 1px #F15A4A solid;
}


.leftTabs {
  width: 35%; 
  float: left;
}
.left-item {
  width: 94%;
  text-align: center;
  padding: 5rpx 1%;
  border-bottom: 1px #DDDDDD solid;
  border-right: 1px #DDDDDD solid;
  font-size: 30rpx;
  background-color: #f5f5f5;
}
.left-item-select {
  border-right-style: none;
  background-color: white;
}
.left-item-btn-select {
  border: 1px #F15A4A solid;
  border-radius: 7px;
  height: 20px;
  display: inline-block;
  padding: 2.5px 15px;
  overflow: hidden;
  margin-top: 15rpx;
}
.select-icon {
  width: 15px;
  height: 15px;
  margin-top: 8px;    
  margin-right: -16px;   
  float: right;  
}
.select-txt {
  float: left;
}

.rightScroll {
  width: 65%; 
  height: 100%;
  float: right;
  background-color: white;
}
.right-item {
  padding: 20rpx;
  border-bottom: 1px #DDDDDD solid; 
}
.rightScroll .avatar {
  display: inline-block;
  margin-right: 10px;
}
.rightScroll .avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 15%;
}
.rightScroll .info {
  display: inline-block;
  font-size: 30rpx;
}
/* .rightScroll .info .praise {
  margin-top: 15rpx;
} */
.rightScroll .price {
  display: inline-block;
  color: #FF0000;
  float: right;
  font-size: 28rpx;
  text-align: right;
}
.selectBtn {
  height: 40rpx;
  width: 100rpx;
  padding: 6rpx 24rpx;
  background-color: #D3AA6A;
  color: white;
  border: 1px #D3AA6A solid;
  border-radius: 14rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.selectedBtn {
  height: 40rpx;
  width: 100rpx;
  padding: 6rpx 24rpx;
  background-color: white;
  color: #D3AA6A;
  border: 1px #D3AA6A solid;
  border-radius: 14rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.notOptional-btn {
  height: 40rpx;
  width: 100rpx;
  padding: 6rpx 24rpx;
  background-color: white;
  color: #DDDDDD;
  border: 1px #DDDDDD solid;
  border-radius: 14rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 13px;
  margin-top: 30rpx;
}

.none {
  border-style: none;
}
 .border-left-none {
  border-right-style: none;
}
.bgcolor {
  background-color: #f5f5f5;
}

.foot-view {
  width: 100%;
  background-color: #f5f5f5;
  border-top: 1px #DDDDDD solid;
  text-align: center;
  padding: 10px;
  bottom: 0;
}

/* 菜品 */
.dishe-img {
  width: 100%;
  height: 200rpx; 
}
.dishe-panel {
  width: 43%;
  background-color: white;
  padding: 20rpx;
  display: inline-block;
  border: 1px #E5E5E5 solid;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.dishe-panel .price {
  display: inline-block;
  color: #FF0000;
  float: right;
  font-size: 26rpx;
  text-align: right;
  margin-top: 8rpx;
}
.next-icon {
  font-size: 26rpx;
  color: gray;
}
.right-icon {
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  margin-top: 9rpx;
}
/* 结算 */
.settlement-view {
  background-color: white;
  border: 1px #DDDDDD solid;
  text-align: right;
  line-height: 80rpx;
  height: 80rpx;
  bottom: 0;
  color: black;
}
.settlement-btn {
  background-color: #F15A4A;
  color: white;
  float: right; 
  padding: 0 40rpx;
  margin-left: 20rpx;
}
.settlement-view .price {
  display: inline-block;
  color: #FF0000;
  font-size: 30rpx;
  text-align: right;
}

/* 查看更多 */
.foot-more-view {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: gray;
  float: right;
}

/* 购物车 */
.shopping-car-view {
  float:right;
  padding:10rpx 40rpx;
  border-left: 1px #f5f5f5 solid;
  margin-left: 20rpx;
}
.shopping-car {
  width: 60rpx;
  height: 60rpx;
}
.number-icon {
  width: 30rpx;
  height: 30rpx;
  background-color: #F15A4A;
  color: white;
  float: right;
  border-radius: 50%;
  line-height: 30rpx;
  text-align: center;
  font-size: 27rpx;
}