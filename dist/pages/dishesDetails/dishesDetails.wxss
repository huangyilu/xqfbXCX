/* pages/dishesDetails/dishesDetails.wxss */

.title-img {
    height: 450rpx;
}
.title-img image{
    width: 100%;
    height: 450rpx;
}
.title {
    padding: 20rpx;
    background-color: white;
    border-bottom: 1px #dddddd solid;
    font-size: 30rpx;
}
.title-swiper-view {
    height: 100%;
    width: 100%;
}
.title-swiper-view swiper {
    height: 100%;
}
.title-bottom-view {
    width: 95%;
    height: 100rpx;
    position: absolute;
    background-color: rgba(1,1,1,0.2);
    color: white;
    margin-top:-100rpx;
    float: left;
    padding: 0 2.5%;
    line-height: 100rpx;
    font-size: 28rpx;
}
.textarea-view {
    width: 95%;
    background-color: white;
    padding: 2.5%;
    font-size: 28rpx;
}
.textarea-view .textContent{
    width: 100%;
    text-align: center;
    margin: 10rpx 0;
}
.textContent .delete-icon {
    margin-left: 20rpx;
    width: 40rpx;
    height: 40rpx;
}
.add-view {
    width: 100%;
    text-align: center;
}
.add-icon {
    width: 40rpx;
    height: 40rpx;
}
.textTitle {
  font-size: 30rpx;
}
.textTitle image{
    width: 40rpx;
    height: 40rpx;
    float: right;
}
.saveBtn {
    float: right;
}
.input-bgview {
    width: 100%;
    height: 100%;
    background-color: rgba(1,1,1,0.5);
    position: fixed;
    bottom: 0;
    z-index: 10;
}
.input-view {
    width: 90%;
    margin: 50% 2.5%;
    background-color: white;
    padding: 5% 2.5%; 
}
.input-view input {
    border-bottom: 1px #dddddd solid;
}
.btn-view {
    padding: 50rpx 10rpx 10rpx; 
    font-size: 14px;
}
.cancel-btn {
    width: 80%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #dddddd;
    text-align: center;
    border-radius: 15rpx;
    margin: 0 20rpx;
}
.define-btn {
    width: 80%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #F15A4A;
    color: white;
    text-align: center;
    border-radius: 15rpx;
    margin: 0 20rpx;
}

.save-view .cancel{
    width: 80%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #dddddd;
    text-align: center;
    border-radius: 15rpx;
    margin: 0 20rpx;
}
.save-view .save{
    width: 80%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #F15A4A;
    color: white;
    text-align: center;
    border-radius: 15rpx;
    margin: 0 20rpx;
}

.comment-icon {
    width: 40rpx;
    height: 40rpx;
    float: right;
}

.foot-view {
    background-color: white; 
    padding: 10rpx 20rpx;
    /* border-top: 1px #dddddd solid; */
    text-align: left;
}

.join-view {
    width: 100%;
    margin-top: 30rpx; 
    text-align: center;   
    margin-bottom: 30rpx;
    font-size: 30rpx;
}
.join-btn {
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    color: white;
    background-color: #F15A4A;
    border-radius: 20rpx;
    text-align: center;
    margin: auto;
}